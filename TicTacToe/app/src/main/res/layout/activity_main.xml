<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bgtictactoe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nxtmove"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="#A687657A"
        />

    <Button
        android:id="@+id/nextMove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#5700080E"
        app:iconTint="#FFD400"
        app:strokeColor="#805252" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3">

        <Button
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="Check"
            android:textColor="#000"
            android:textSize="45sp"
            android:background="@drawable/ic_baseline_circle_24"
            android:gravity="center_vertical|center_horizontal"

            />
        <Button
            android:id="@+id/btn2"
            android:layout_marginLeft="11dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="Check"
            android:textColor="#000"
            android:textSize="45sp"
            android:background="@drawable/ic_baseline_circle_24"
            android:gravity="center_vertical|center_horizontal"
            />
        <Button
            android:id="@+id/btn3"
            android:layout_marginLeft="11dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="Check"
            android:textColor="#000"
            android:textSize="45sp"
            android:background="@drawable/ic_baseline_circle_24"
            android:gravity="center_vertical|center_horizontal"/>
        <Button
            android:id="@+id/btn4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="Check"
            android:textColor="#000"
            android:textSize="45sp"
            android:background="@drawable/ic_baseline_circle_24"
            android:gravity="center_vertical|center_horizontal"/>

        <Button
            android:id="@+id/btn5"
            android:layout_marginLeft="11dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="Check"
            android:textColor="#000"
            android:textSize="45sp"
            android:background="@drawable/ic_baseline_circle_24"
            android:gravity="center_vertical|center_horizontal"/>
        <Button
            android:id="@+id/btn6"
            android:layout_marginLeft="11dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="Check"
            android:textColor="#000"
            android:textSize="45sp"
            android:background="@drawable/ic_baseline_circle_24"
            android:gravity="center_vertical|center_horizontal"/>
        <Button
            android:id="@+id/btn7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="Check"
            android:textColor="#000"
            android:textSize="45sp"
            android:background="@drawable/ic_baseline_circle_24"
            android:gravity="center_vertical|center_horizontal"/>
        <Button
            android:id="@+id/btn8"
            android:layout_marginLeft="11dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="Check"
            android:textColor="#000"
            android:textSize="45sp"
            android:background="@drawable/ic_baseline_circle_24"
            android:gravity="center_vertical|center_horizontal"/>
        <Button
            android:id="@+id/btn9"
            android:layout_marginLeft="11dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="Check"
            android:textColor="#000"
            android:textSize="45sp"
            android:background="@drawable/ic_baseline_circle_24"
            android:gravity="center_vertical|center_horizontal"/>

    </GridLayout>

    <Button
        android:id="@+id/reset"
        android:layout_margin="30dp"
        android:text="@string/rst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80sp"
        android:text="@string/pwrdby"
        android:textSize="10sp"
        />

    <ImageView
        android:layout_width="184dp"
        android:layout_height="70dp"
        android:src="@drawable/logo" />


</LinearLayout>